---
import socials from '../../config/socials.json'; // Import the social links from the CMS

const { social_links } = socials;  // Get the list of social links from CMS
---

<footer class="footer">
  <div class="footer-container">
    <nav class="social-links">
      {social_links.map((social) => (
        <a
          href={social.url}  // Use the social media URL from CMS
          target="_blank"
          rel="noopener noreferrer"
          class="social-link"
          aria-label={social.platform}  // Use the platform name for accessibility
        >
          {/* Dynamically use the favicon for each platform */}
          <img 
            src={`https://www.${social.platform}.com/favicon.ico`} 
            alt={`${social.platform} icon`} 
            class="social-icon" 
          />
          <span class="sr-only">{social.platform}</span>  {/* Accessibility text */}
        </a>
      ))}
    </nav>
    <p class="footer-text">Â© 2026 YourSiteName. All Rights Reserved.</p>
  </div>
</footer>

<style>
  .footer {
    background-color: #333;
    color: #fff;
    padding: 2rem;
    text-align: center;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 1rem;
  }

  .social-link {
    display: inline-block;
    text-decoration: none;
    color: #fff;
  }

  .social-link:hover {
    opacity: 0.8;
  }

  .social-icon {
    width: 24px;
    height: 24px;
  }

  .footer-text {
    font-size: 0.875rem;
    color: #bbb;
  }
</style>
