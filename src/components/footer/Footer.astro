---

//Imports
import Socials from '../socials/Socials.astro';
import socials from '../../config/socials.json'; 
import FooterGallery from './gallery/FooterGallery.astro';
import { images } from '../../config/footer-gallery.json';

// Styles
import '../footer/footer.scss';

// Scripts
const d = new Date();
let year = d.getFullYear();


// Props
const { title } = Astro.props;
const { social_links } = socials;  // Get the list of social links from CMS
---

<footer class="footer">
  <div class="footer-container">
    <!-- Pass social_links as a prop to Socials.astro -->
    <Socials social_links={social_links} />
    <FooterGallery  footer_images={images} />
