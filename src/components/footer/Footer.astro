---
import socials from '../../config/socials.json';  // Import social links data from CMS

// Extract the social links array
const { social_links } = socials;
---

<footer class="footer">
  <div class="footer-container">
    <nav class="social-links">
      {social_links.map((social) => (
        <a
          href={social.url}
          target="_blank"
          rel="noopener noreferrer"
          class="social-link"
          aria-label={social.platform}
        >
          <img 
            src={`https://www.${social.platform}.com/favicon.ico`} 
            alt={`${social.platform} icon`} 
            class="social-icon" 
          />
          <span class="sr-only">{social.platform}</span>  <!-- Screen reader-friendly text -->
        </a>
      ))}
    </nav>
    <p class="footer-text">Â© 2026 YourSiteName. All Rights Reserved.</p>
  </div>
</footer>

<style>
  .footer {
    background-color: #333;
    color: #fff;
    padding: 2rem;
    text-align: center;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 1rem;
  }

  .social-link {
    display: inline-block;
    text-decoration: none;
    color: #fff;
  }

  .social-link:hover {
    opacity: 0.8;
  }

  .social-icon {
    width: 24px;
    height: 24px;
  }

  .footer-text {
    font-size: 0.875rem;
    color: #bbb;
  }

  /* Screen reader accessibility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
    clip: rect(0, 0, 0, 0);
    clip-path: inset(50%);
    overflow: hidden;
  }
</style>
