---
const footerGallery = await Astro.fetchContent('footer-gallery');  // Fetch CMS content
const footer_images = footerGallery.images || [];  // Get images from CMS

const imagePaths = footer_images.map((image) => image.image.url);  // Extract URLs
---

<div class="footer-gallery">
  {imagePaths.map((image, index) => (
    <img src={image} alt={`Footer Gallery Image ${index + 1}`} class="footer-gallery-image" />
  ))}
</div>
