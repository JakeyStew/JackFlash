---
// Accept the footer_images prop
const { footer_images } = Astro.props;  
console.info(footer_images);  // Log the footer images for debugging

// Map over the images array to extract the `image` path
const imagePaths = footer_images.map((image: { image: any; }) => image.image);
console.info(imagePaths);  // Log the paths to check they are correct
---

<div class="footer-gallery">
  {imagePaths.map((image: string | null | undefined, index: number) => (
    <img src={image} alt={`Footer Gallery Image ${index + 1}`} class="footer-gallery-image" />
  ))}
</div>
