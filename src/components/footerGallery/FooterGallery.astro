---
import fs from 'fs';
import path from 'path';

// Path to the images directory
const imagesDirectory = path.resolve('./src/images/footer');  // Assuming your footer images are in a `footer` subfolder within `images`

// Get all image files (png, webp, jpg)
const imageFiles = fs.readdirSync(imagesDirectory).filter((file) =>
  ['.png', '.jpg', '.webp'].includes(path.extname(file).toLowerCase())
);

// Map the image paths for rendering
const imagePaths = imageFiles.map((file) => `/images/footer/${file}`);
console.info(imagePaths)
---

<div class="footer-gallery">
  {imagePaths.map((image) => (
    <img src={image} alt="Footer Gallery Image" class="footer-gallery-image" />
  ))}
</div>
